{
  "name": "nodejs-microservice-template",
  "version": "1.0.0",
  "description": "A NodeJS microservice template",
  "main": "main.js",
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "containers:start": "npm-run-all -s build compose:start",
    "containers:build": "npm-run-all -s build compose:build",
    "containers:remove": "docker-compose -f dev.Compose.yml down",
    "containers:stop": "docker-compose -f dev.Compose.yml stop",
    "compose:start": "docker-compose -f dev.Compose.yml up",
    "compose:build": "docker-compose -f dev.Compose.yml build",
    "start": "node .",
    "start:dev": "nodemon .",
    "lint": "eslint src tests",
    "lint:fix": "eslint src --fix",
    "test": "npm-run-all -s lint jest",
    "jest": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/logger.js",
      "!**/{config}/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "author": "NÃ©stor Diaz",
  "license": "MIT",
  "dependencies": {
    "awilix": "^4.2.5",
    "body-parser": "^1.19.0",
    "@hapi/boom": "^9.1.0",
    "chalk": "^4.0.0",
    "config": "^3.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-winston": "^4.0.3",
    "http-status-codes": "^1.4.0",
    "pg": "^8.0.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2"
  }
}
